<div id="flash" class="w-full">
  <template data-template>
    <div class="text-center text-white bg-green-600">
      <p data-value></p>
    </div>
  </template>
</div>

<div class="flex justify-center gap-20 py-10">
  <div class="flex flex-wrap max-w-lg">
    <% @product.images.each do |image| %>
      <%= image_tag image, class: "w-auto h-64" %>
    <% end %>
  </div>

  <div data-controller="products" data-products-product-value="<%= @product.to_json %>" data-products-stock-value="<%= @product.stocks.to_json %>" class="flex flex-col items-start max-w-sm">
    <h1 class="text-4xl font-bold uppercase"><%= @product.name %></h1>
    <p class="mt-4 text-2xl" id="product-price">
      <% if @product.price %>
        <% if @product.amount && @product.amount > 0 && @product.price > 0 %>
          <%= formatted_price(@product.price) %>
        <% else %>
          Out of stock.
        <% end %>
      <% else %>
        <% if @product.stocks.count > 0 %>
          Select a size.
        <% else %>
          Out of stock.
        <% end %>
      <% end %>
    </p>
    <p class="py-8 text-md"><%= @product.description %></p>
    <div class="my-8">
      <% if @product.stocks.count > 0 %>
        <p class='text-lg uppercase'>Size</p>
        <% @product.stocks.each do |stock| %>
          <% if stock.amount && stock.amount > 0 %>
              <% if stock.price && stock.price > 0 %>
                <button data-action="click->products#selectSize" value="<%= stock.size %>" id="button-text-<%= stock.size %>" class="px-4 py-2 font-semibold text-gray-800 bg-gray-200 rounded hover:bg-gray-300 focus:outline-none focu:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
                  <%= stock.size %>
                  <%= formatted_price(stock.price) %>
                </button>
              <% else %>
                <button disabled value="<%= stock.size %>" class="px-4 py-2 font-semibold text-gray-800 bg-gray-200 rounded disabled:bg-gray-400 hover:bg-gray-300 focus:outline-none focu:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
                  <%= stock.size %> No price set.
                </button>
              <% end %>
            </button>
          <% else %>
            <button disabled value="<%= stock.size %>" class="px-4 py-2 font-semibold text-gray-800 bg-gray-200 rounded disabled:bg-gray-400 hover:bg-gray-300 focus:outline-none focu:ring-2 focus:ring-gray-500 focus:ring-opacity-50">
              <%= stock.size %> Out of stock.
            </button>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div id="selected-size"></div>
      <% if @product.price && @product.amount && @product.amount > 0 && @product.price > 0 %>
          <button id="add-to-cart-button" data-action="click->products#addToCart" class="inline-flex items-center justify-center px-5 py-3 font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white-500">Add To Cart</button>
      <% else %>
          <button disabled id="add-to-cart-button" data-action="click->products#addToCart" class="inline-flex items-center justify-center invisible px-5 py-3 font-medium text-white bg-green-600 border border-transparent rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white-500">Add To Cart</button>
      <% end %>
  </div>
</div>
<div class="py-5 my-10 text-center text-white bg-blue-600">
</div>
