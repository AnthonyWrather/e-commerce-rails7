<nav class="fixed top-0 z-10 w-full gap-10 bg-blue-600">
  <div class="px-2 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="flex items-center justify-center flex-1 sm:items-stretch sm:justify-between">
        <div class="flex items-center flex-shrink-0">
          <%= link_to root_path do %>
            <%= image_tag 'SCFS-Logo.jpg', class: 'block lg:hidden h-12 w-auto' %>
          <% end %>
          <%= link_to root_path do %>
            <%= image_tag 'SCFS-Logo.jpg', class: 'hidden lg:block h-12 w-auto' %>
          <% end %>
          <%= link_to 'Shop', root_path, class: "text-gray-100 hover:underline py-2 px-2 rounded-md text-md font-medium" %>
        </div>

        <div class="flex items-center flex-shrink-0 max-sm:hidden">
          <%# <%= link_to 'Southcoast Fibreglass Supplies', contact_path, class: "text-4xl font-bold text-gray-100 hover:underline py-2 rounded-md text-md font-medium " %>
          <p class="px-2 py-2 text-2xl font-medium text-gray-100 rounded-md text-md sml:block">Southcoast Fibreglass Supplies</p>
        </div>
        <div class="flex items-center flex-shrink-0 sm:hidden">
          <%# <%= link_to 'Southcoast Fibreglass Supplies', contact_path, class: "text-4xl font-bold text-gray-100 hover:underline py-2 rounded-md text-md font-medium " %>
          <p class="px-8 py-8 text-2xl font-medium text-gray-100 rounded-md text-md sml:block">SCFS</p>
        </div>

        <div class="flex items-center gap-4 flex-shrink-0">
          <%= form_with url: search_path, method: :get, class: "flex items-center", data: { turbo: false } do |form| %>
            <div class="relative">
              <%= form.search_field :q, value: params[:q], placeholder: "Search products...", class: "w-40 sm:w-64 px-4 py-2 pr-10 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent", autocomplete: "off" %>
              <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-blue-600" aria-label="Search">
                <%= icon 'fa-solid', 'magnifying-glass', class: 'text-sm' %>
              </button>
            </div>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to conversations_path, class: "text-gray-100 py-2 relative" do %>
              <%= icon 'fa-solid', 'comments' %>
              <% unread_count = current_user.conversations.unresolved.count %>
              <% if unread_count > 0 %>
                <span class="absolute -top-1 -right-1 inline-flex items-center justify-center px-1.5 py-0.5 text-xs font-bold leading-none text-white bg-red-500 rounded-full">
                  <%= unread_count %>
                </span>
              <% end %>
            <% end %>
            <%= link_to 'Messages', conversations_path, class: "text-gray-100 hover:underline py-2 px-2 rounded-md text-md font-medium hidden sm:inline" %>
            <%= link_to account_path, class: "text-gray-100 py-2" do %>
              <%= icon 'fa-solid', 'user' %>
            <% end %>
            <%= link_to 'Account', account_path, class: "text-gray-100 hover:underline py-2 px-2 rounded-md text-md font-medium hidden sm:inline" %>
          <% else %>
            <%= link_to new_user_session_path, class: "text-gray-100 py-2" do %>
              <%= icon 'fa-solid', 'sign-in-alt' %>
            <% end %>
            <%= link_to 'Sign In', new_user_session_path, class: "text-gray-100 hover:underline py-2 px-2 rounded-md text-md font-medium hidden sm:inline" %>
          <% end %>
          <%= link_to cart_path, class: "text-gray-100 py-2" do %>
            <%= icon 'fa-solid', 'shopping-cart' %>
          <% end %>
          <%= link_to 'Cart', cart_path, class: "text-gray-100 hover:underline py-2 px-2 rounded-md text-md font-medium " %>
        </div>
      </div>
    </div>
  </div>
  <div class="px-2 mx-auto text-white max-w-7xl sm:px-6 lg:px-8">
    <div class="bg-blue-400 border border-gray-200">
      <%= render_breadcrumbs :separator => ' / ' %>
    </div>
  </div>
</nav>
