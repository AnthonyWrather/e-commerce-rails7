  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %> <%= key == 'error' ? 'bg-red-600' : 'bg-green-600' %> text-white text-center p-4">
      <%= value %>
    </div>
  <% end %>

<div class="py-20 mb-8 text-center text-white bg-blue-600">

  <div class="grid grid-cols-1 mt-1">
    <div>
      <div class="flex">
        <div class="mt-3 py-1.25 px-0.75 items-center text-center w-1/2 md:w-full">
          <p>
            <span class="block font-semibold text-[1.75rem] leading-9 text-blue" id="costs-students-awarded-grants-percent">
              <%= image_tag("SCFS-Header.jpg", class: "max-w-lg w-100 h-100 ") %>
            </span>
          </p>
        </div>
        <div class="mt-3 py-1.25 px-0.75 items-left text-left w-1/2 md:w-full">
          <p>
            <span class="block font-semibold text-[1.75rem] leading-9 text-blue" id="costs-students-awarded-grants-percent">
              Welcome to our store.
            </span>
            <span class="mt-0.5 block font-medium text-sm leading-[1.125rem]">
              <p class="mb-2 text-xl">Supplier of fibreglass materials including roofing materials and all ancillary items and tools.</p>
              <p class="mb-8 text-xl">Your one-stop shop for all your fibreglass needs! Small business service with national delivery.</p>
          </span>
        </p>
      </div>
    </div>

    <div class="grid grid-cols-2 mt-5 border border-gray-detailBorder">
      <p>Need to WhatsApp and Leave a review.</p>
      <div class="flex">
        <div class="mt-3 py-1.25 px-0.75 items-center text-center w-1/2 md:w-full border border-gray-detailBorder">
          <p class="mb-2 text-xl">Contact Us</p>
          <%= form_with scope: :contact_form, url: contact_path, method: :post, local: true, class: "container" do |form| %>
            <div class="form-group">
              <%= form.label :first_name %>
              <%= form.text_field :first_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :last_name %>
              <%= form.text_field :last_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :your_email %>
              <%= form.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.label :message %>
              <%= form.text_area :message, class: "form-control" %>
            </div>
            <%= form.submit "Submit", class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="mt-3 py-1.25 px-0.75 items-center text-center w-1/2 md:w-full border border-gray-detailBorder">
          <p class="mb-2 text-xl"> Where are we? </p>
          <p class="mb-2 text-xl"> Map goes here. </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="py-5 my-10 text-center text-white bg-blue-600 border border-gray-detailBorder">
  <h2 class="mb-6 text-3xl font-bold">Stay Updated</h2>
  <p class="mb-8">Subscribe to our newsletter for the latest updates and offers.</p>
  <%= form_with url: root_path, method: :post, local: true, class: "flex justify-center" do %>
    <%= email_field_tag :email, nil, placeholder: "Enter your email", class: "p-2 rounded-l text-gray-800" %>
    <%= submit_tag "Subscribe", class: "bg-gray-700 hover:bg-gray-800 cursor-pointer text-white font-bold py-2 px-4 rounded-r" %>
  <% end %>
</div>
