<h1 class="text-3xl font-bold text-gray-900 mb-6">Start New Chat</h1>

<!-- Admin Availability Indicator -->
<div class="mb-6" data-controller="presence">
  <div class="flex items-center bg-white rounded-lg shadow p-4">
    <div data-presence-target="indicator" class="w-3 h-3 rounded-full mr-3 <%= @online_admin_count > 0 ? 'bg-green-500' : 'bg-gray-400' %>"></div>
    <span class="text-gray-700">
      <span data-presence-target="count"><%= @online_admin_count %></span> administrator<%= @online_admin_count == 1 ? '' : 's' %> online
    </span>
  </div>
</div>

<div class="bg-white rounded-lg shadow p-6">
  <%= form_with model: @conversation, url: conversations_path, class: "space-y-6" do |f| %>
    <% if @conversation.errors.any? %>
      <div id="error_explanation" class="px-3 py-2 font-medium text-red-500 rounded-lg bg-red-50">
        <h2><%= pluralize(@conversation.errors.count, "error") %> prohibited this conversation from being started:</h2>
        <ul class="list-disc list-inside mt-2">
          <% @conversation.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :subject, "Subject (optional)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :subject, placeholder: "e.g., Order inquiry, Product question", class: "w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      <p class="mt-1 text-sm text-gray-500">A brief topic helps admins understand your inquiry</p>
    </div>

    <div>
      <%= f.label :initial_message, "Your message", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :initial_message, placeholder: "How can we help you today?", rows: 5, class: "w-full rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none" %>
      <p class="mt-1 text-sm text-gray-500">Describe your question or issue in detail</p>
    </div>

    <div class="flex items-center justify-between pt-4">
      <%= link_to conversations_path, class: "text-gray-600 hover:text-gray-800" do %>
        <%= icon('fa-solid', 'arrow-left', class: 'mr-2') %> Back to Messages
      <% end %>
      <%= f.submit "Start Chat", class: "px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>

<% if @online_admin_count == 0 %>
  <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex items-center">
      <%= icon('fa-solid', 'circle-info', class: 'text-yellow-600 mr-3') %>
      <p class="text-yellow-800">
        <strong>Note:</strong> No administrators are currently online. Your message will be answered as soon as someone is available.
      </p>
    </div>
  </div>
<% end %>
