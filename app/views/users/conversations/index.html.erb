<h1 class="text-3xl font-bold text-gray-900 mb-6">My Messages</h1>

<!-- Admin Availability Indicator -->
<div class="mb-6" data-controller="presence">
  <div class="flex items-center justify-between bg-white rounded-lg shadow p-4">
    <div class="flex items-center">
      <div data-presence-target="indicator" class="w-3 h-3 rounded-full mr-3 <%= @online_admin_count > 0 ? 'bg-green-500' : 'bg-gray-400' %>"></div>
      <span class="text-gray-700">
        <span data-presence-target="count"><%= @online_admin_count %></span> administrator<%= @online_admin_count == 1 ? '' : 's' %> online
      </span>
    </div>
    <%= link_to new_conversation_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
      <%= icon('fa-solid', 'plus', class: 'mr-2') %> Start New Chat
    <% end %>
  </div>
</div>

<!-- Conversations List -->
<% if @conversations.any? %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <ul class="divide-y divide-gray-200">
      <% @conversations.each do |conversation| %>
        <%= link_to conversation_path(conversation), class: "block hover:bg-gray-50 transition-colors" do %>
          <li class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex-1 min-w-0">
                <div class="flex items-center mb-1">
                  <h3 class="text-lg font-medium text-gray-900 truncate">
                    <%= conversation.subject.presence || "Chat ##{conversation.id}" %>
                  </h3>
                  <span class="ml-3 inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_badge_class(conversation.status) %>">
                    <%= conversation.status.humanize %>
                  </span>
                </div>
                <% if conversation.latest_message %>
                  <p class="text-sm text-gray-500 truncate">
                    <span class="font-medium"><%= conversation.latest_message.sender_name %>:</span>
                    <%= truncate(conversation.latest_message.content, length: 100) %>
                  </p>
                <% else %>
                  <p class="text-sm text-gray-400 italic">No messages yet</p>
                <% end %>
              </div>
              <div class="ml-4 flex-shrink-0 text-right">
                <p class="text-sm text-gray-500">
                  <% if conversation.last_message_at %>
                    <%= time_ago_in_words(conversation.last_message_at) %> ago
                  <% else %>
                    <%= time_ago_in_words(conversation.created_at) %> ago
                  <% end %>
                </p>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <div class="mb-4">
      <%= icon('fa-solid', 'comments', class: 'text-6xl text-gray-300') %>
    </div>
    <h3 class="text-xl font-medium text-gray-900 mb-2">No conversations yet</h3>
    <p class="text-gray-500 mb-4">Start a chat with our support team to get help with your orders or products.</p>
    <%= link_to new_conversation_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" do %>
      <%= icon('fa-solid', 'plus', class: 'mr-2') %> Start New Chat
    <% end %>
  </div>
<% end %>
