<h1 class="text-3xl font-bold text-gray-900 mb-6">Account Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <!-- Profile Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-800">Profile</h2>
      <%= link_to edit_account_path, class: "text-blue-600 hover:text-blue-800 text-sm" do %>
        <%= icon('fa-solid', 'pen', class: 'mr-1') %> Edit
      <% end %>
    </div>
    <div class="space-y-3">
      <div>
        <span class="text-gray-500 text-sm">Name</span>
        <p class="text-gray-900 font-medium"><%= @user.full_name %></p>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Email</span>
        <p class="text-gray-900"><%= @user.email %></p>
      </div>
      <% if @user.phone.present? %>
        <div>
          <span class="text-gray-500 text-sm">Phone</span>
          <p class="text-gray-900"><%= @user.phone %></p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Primary Address Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-gray-800">Primary Address</h2>
      <%= link_to addresses_path, class: "text-blue-600 hover:text-blue-800 text-sm" do %>
        Manage <%= icon('fa-solid', 'arrow-right', class: 'ml-1') %>
      <% end %>
    </div>
    <% if @primary_address %>
      <div class="text-gray-700">
        <p class="font-medium"><%= @primary_address.full_name %></p>
        <p><%= @primary_address.line1 %></p>
        <% if @primary_address.line2.present? %>
          <p><%= @primary_address.line2 %></p>
        <% end %>
        <p><%= @primary_address.city %><%= ", #{@primary_address.county}" if @primary_address.county.present? %></p>
        <p><%= @primary_address.postcode %></p>
        <p><%= @primary_address.country %></p>
      </div>
    <% else %>
      <p class="text-gray-500">No primary address set.</p>
      <%= link_to new_address_path, class: "inline-block mt-2 text-blue-600 hover:text-blue-800" do %>
        <%= icon('fa-solid', 'plus', class: 'mr-1') %> Add Address
      <% end %>
    <% end %>
  </div>

  <!-- Account Stats Card -->
  <div class="bg-white rounded-lg shadow p-6">
    <h2 class="text-xl font-semibold text-gray-800 mb-4">Account Summary</h2>
    <div class="space-y-3">
      <div class="flex justify-between items-center">
        <span class="text-gray-500">Total Orders</span>
        <span class="text-gray-900 font-medium"><%= current_user.orders.count %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-gray-500">Saved Addresses</span>
        <span class="text-gray-900 font-medium"><%= current_user.addresses.count %></span>
      </div>
      <div class="flex justify-between items-center">
        <span class="text-gray-500">Member Since</span>
        <span class="text-gray-900 font-medium"><%= @user.created_at.strftime('%B %Y') %></span>
      </div>
    </div>
  </div>
</div>

<!-- Recent Orders Section -->
<div class="mt-8">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-semibold text-gray-800">Recent Orders</h2>
    <%= link_to orders_path, class: "text-blue-600 hover:text-blue-800" do %>
      View All <%= icon('fa-solid', 'arrow-right', class: 'ml-1') %>
    <% end %>
  </div>

  <% if @recent_orders.any? %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @recent_orders.each do |order| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">#<%= order.id %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= order.created_at.strftime('%d %b %Y') %></td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= formatted_price(order.total) %></td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if order.fulfilled %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Fulfilled</span>
                <% else %>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">Processing</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to order_path(order), class: "text-blue-600 hover:text-blue-800" do %>
                  View Details
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <p class="text-gray-500 mb-4">You haven't placed any orders yet.</p>
      <%= link_to root_path, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" do %>
        Start Shopping
      <% end %>
    </div>
  <% end %>
</div>
