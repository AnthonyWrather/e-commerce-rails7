<%= form.hidden_field :id if form.object.persisted? %>

<div class="space-y-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :label, 'Address Label', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :label, placeholder: 'e.g., Home, Work, Office', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm', required: true %>
      <p class="mt-1 text-xs text-gray-500">A name to identify this address</p>
    </div>
    <div>
      <%= form.label :full_name, 'Full Name', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :full_name, placeholder: 'Recipient name', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm', required: true %>
    </div>
  </div>

  <div>
    <%= form.label :line1, 'Address Line 1', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :line1, placeholder: 'Street address, P.O. box, company name', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm', required: true %>
  </div>

  <div>
    <%= form.label :line2, 'Address Line 2 (Optional)', class: 'block text-sm font-medium text-gray-700' %>
    <%= form.text_field :line2, placeholder: 'Apartment, suite, unit, building, floor, etc.', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= form.label :city, 'City / Town', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :city, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm', required: true %>
    </div>
    <div>
      <%= form.label :county, 'County (Optional)', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :county, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' %>
    </div>
    <div>
      <%= form.label :postcode, 'Postcode', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.text_field :postcode, placeholder: 'e.g., SW1A 1AA', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm', required: true %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= form.label :country, 'Country', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.select :country, options_for_select([['United Kingdom', 'United Kingdom']], form.object.country || 'United Kingdom'), {}, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' %>
    </div>
    <div>
      <%= form.label :phone, 'Phone Number (Optional)', class: 'block text-sm font-medium text-gray-700' %>
      <%= form.telephone_field :phone, placeholder: '+44 20 1234 5678', class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm' %>
    </div>
  </div>

  <div class="flex items-center">
    <%= form.check_box :primary, class: 'h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500' %>
    <%= form.label :primary, 'Set as primary address', class: 'ml-2 block text-sm text-gray-700' %>
  </div>
</div>
