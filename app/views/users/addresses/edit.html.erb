<h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Address</h1>

<div class="bg-white rounded-lg shadow p-6 max-w-2xl">
  <%= form_with model: @address, url: address_path(@address), method: :patch do |form| %>
    <% if @address.errors.any? %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded">
        <h3 class="text-red-800 font-semibold mb-2">Please fix the following errors:</h3>
        <ul class="list-disc list-inside text-red-700">
          <% @address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= render 'form', form: form %>

    <div class="flex items-center justify-between pt-6 mt-6 border-t border-gray-200">
      <%= link_to addresses_path, class: 'text-gray-600 hover:text-gray-800' do %>
        <%= icon('fa-solid', 'arrow-left', class: 'mr-2') %> Cancel
      <% end %>
      <%= form.submit 'Update Address', class: 'px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer' %>
    </div>
  <% end %>
</div>
