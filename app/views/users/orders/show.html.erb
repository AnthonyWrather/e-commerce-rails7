<div class="mb-6">
  <%= link_to orders_path, class: 'text-blue-600 hover:text-blue-800' do %>
    <%= icon('fa-solid', 'arrow-left', class: 'mr-2') %> Back to Order History
  <% end %>
</div>

<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">Order #<%= @order.id %></h1>
  <% if @order.fulfilled %>
    <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">Fulfilled</span>
  <% else %>
    <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">Processing</span>
  <% end %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Order Details -->
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
        <h2 class="text-lg font-semibold text-gray-800">Order Items</h2>
      </div>
      <div class="divide-y divide-gray-200">
        <% @order_products.each do |order_product| %>
          <div class="p-6 flex items-center gap-4">
            <div class="flex-shrink-0 w-16 h-16 bg-gray-100 rounded overflow-hidden">
              <% if order_product.product.images.attached? %>
                <%= image_tag order_product.product.images.first.variant(:thumb), class: 'w-full h-full object-cover' %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-gray-400">
                  <%= icon('fa-solid', 'image', class: 'text-2xl') %>
                </div>
              <% end %>
            </div>
            <div class="flex-1">
              <h3 class="text-gray-900 font-medium"><%= order_product.product.name %></h3>
              <% if order_product.size.present? %>
                <p class="text-gray-500 text-sm">Size: <%= order_product.size %></p>
              <% end %>
              <p class="text-gray-500 text-sm">Qty: <%= order_product.quantity %></p>
            </div>
            <div class="text-right">
              <p class="text-gray-900 font-medium"><%= formatted_price(order_product.price || 0) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Order Summary -->
  <div class="lg:col-span-1">
    <div class="bg-white rounded-lg shadow p-6 space-y-6">
      <div>
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Summary</h2>
        <dl class="space-y-2">
          <div class="flex justify-between">
            <dt class="text-gray-500">Order Date</dt>
            <dd class="text-gray-900"><%= @order.created_at.strftime('%d %b %Y') %></dd>
          </div>
          <% if @order.shipping_cost && @order.shipping_cost > 0 %>
            <div class="flex justify-between">
              <dt class="text-gray-500">Subtotal</dt>
              <dd class="text-gray-900"><%= formatted_price(@order.total - @order.shipping_cost) %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-gray-500">Shipping</dt>
              <dd class="text-gray-900"><%= formatted_price(@order.shipping_cost) %></dd>
            </div>
          <% end %>
          <div class="flex justify-between pt-2 border-t border-gray-200">
            <dt class="text-gray-900 font-semibold">Total</dt>
            <dd class="text-gray-900 font-semibold"><%= formatted_price(@order.total) %></dd>
          </div>
        </dl>
      </div>

      <div class="pt-4 border-t border-gray-200">
        <h3 class="text-md font-semibold text-gray-800 mb-2">Shipping Address</h3>
        <address class="text-gray-700 not-italic text-sm">
          <p class="font-medium"><%= @order.name %></p>
          <p><%= @order.address %></p>
          <% if @order.phone.present? %>
            <p class="mt-2 text-gray-500"><%= @order.phone %></p>
          <% end %>
        </address>
      </div>

      <% if @order.billing_address.present? %>
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-md font-semibold text-gray-800 mb-2">Billing Address</h3>
          <address class="text-gray-700 not-italic text-sm">
            <p class="font-medium"><%= @order.billing_name %></p>
            <p><%= @order.billing_address %></p>
          </address>
        </div>
      <% end %>

      <% if @order.shipping_description.present? %>
        <div class="pt-4 border-t border-gray-200">
          <h3 class="text-md font-semibold text-gray-800 mb-2">Shipping Method</h3>
          <p class="text-gray-700 text-sm"><%= @order.shipping_description %></p>
        </div>
      <% end %>

      <div class="pt-4 border-t border-gray-200">
        <h3 class="text-md font-semibold text-gray-800 mb-2">Payment</h3>
        <div class="flex items-center text-sm">
          <% if @order.payment_status == 'paid' %>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Paid</span>
          <% else %>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800"><%= @order.payment_status&.titleize || 'Unknown' %></span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
