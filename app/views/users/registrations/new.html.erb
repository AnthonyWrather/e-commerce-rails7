<div class="flex items-center justify-center min-h-screen px-4 py-12 bg-gray-50 sm:px-6 lg:px-8">
  <div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-3xl font-extrabold text-center text-gray-900">
        Create Your Account
      </h2>
      <p class="mt-2 text-sm text-center text-gray-600">
        Sign up to save your cart and checkout faster
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="space-y-4 rounded-md shadow-sm">
        <div>
          <%= f.label :full_name, "Full Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :full_name, autofocus: true, autocomplete: "name", required: true,
              placeholder: "John Smith",
              class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :phone, "Phone Number (optional)", class: "block text-sm font-medium text-gray-700" %>
          <%= f.telephone_field :phone, autocomplete: "tel",
              placeholder: "+44 20 1234 5678",
              class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autocomplete: "email", required: true,
              placeholder: "you@example.com",
              class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", required: true,
              class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
              class: "block w-full px-3 py-2 mt-1 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign up", class: "relative flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md group hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
