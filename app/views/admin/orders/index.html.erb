<div class="w-full">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <h2>Unfulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="inline-block min-w-full py-2">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Order ID
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Order Date
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Shipping Type
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Name
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Customer Email
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Address
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Total
                </th>
              </tr>
            </thead>
            <tbody>
              <% @not_fulfilled_orders.each do |order| %>
                <tr class="border-b bg-gray-50">
                  <td class="px-6 py-4 font-medium text-gray-800 underline whitepsace-nowrap tex-sm">
                    <%= link_to order.id, [:admin, order], class: 'underline' %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.created_at.strftime("%a %d %B %Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.shipping_description %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.name %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.customer_email %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.address %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= formatted_price(order.total) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%== pagy_nav(@not_fulfilled_pagy) if @not_fulfilled_pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>

  <h2>Fulfilled Orders</h2>
  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="inline-block min-w-full py-2">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Order ID
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Order Date
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Name
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Customer Email
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Address
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Total
                </th>
              </tr>
            </thead>
            <tbody>
              <% @fulfilled_orders.each do |order| %>
                <tr class="border-b bg-gray-50">
                  <td class="px-6 py-4 font-medium text-gray-800 underline whitepsace-nowrap tex-sm">
                    <%= link_to order.id, [:admin, order], class: 'underline' %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.created_at.strftime("%d %B %Y %H:%M") %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.name %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.customer_email %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= order.address %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    Â£<%= (order.total/100.0) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%== pagy_nav(@fulfilled_pagy) if @fulfilled_pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>

</div>
