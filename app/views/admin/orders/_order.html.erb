<div id="<%= dom_id order %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= order.name %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Customer email:</strong>
    <%= order.customer_email %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Fulfilled:</strong>
    <%= order.fulfilled %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Total:</strong>
    Â£<%= (order.total/100.0) %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Address:</strong>
    <%= order.address %>
  </p>

  <% if order.order_products.any? %>
    <strong class="block mb-1 font-medium">Products:</strong>
    <table class="min-w-full overflow-x-scroll">
      <tr>
        <th bg-gray-300 style="border: 1px solid black">Name</th>
        <th bg-gray-300 style="border: 1px solid black">Size</th>
        <th bg-gray-300 style="border: 1px solid black">Quantity</th>
      </tr>
      <% order.order_products.each do |op| %>
        <tr>
        <td bg-gray-100 style="border: 1px solid black"><%= op.product.name %></td>
        <td bg-gray-100 style="border: 1px solid black"><%= op.size %></td>
        <td bg-gray-100 style="border: 1px solid black"><%= op.quantity %></td>
        </tr>
      <% end %>
    </table>
  <% end %>

  <% if action_name != "show" %>
    <%= link_to "Show this order", [:admin, order], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this order", edit_admin_order_path(order), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
