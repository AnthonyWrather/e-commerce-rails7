<div class="flex flex-col lg:flex-row h-[calc(100vh-4rem)] gap-4">
  <!-- Main Chat Area -->
  <div class="flex-1 flex flex-col min-w-0">
    <!-- Header -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center">
        <%= link_to admin_conversations_path, class: "mr-4 text-gray-500 hover:text-gray-700" do %>
          <%= icon('fa-solid', 'arrow-left') %>
        <% end %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">
            <%= @conversation.subject.presence || "Chat ##{@conversation.id}" %>
          </h1>
          <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_badge_class(@conversation.status) %>">
            <%= @conversation.status.humanize %>
          </span>
        </div>
      </div>
      <!-- Action Buttons -->
      <div class="flex items-center space-x-2">
        <% if @conversation.open? || @conversation.active? %>
          <%= link_to resolve_admin_conversation_path(@conversation), data: { turbo_method: :patch, turbo_confirm: 'Mark this conversation as resolved?' }, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <%= icon('fa-solid', 'check', class: 'mr-2') %>
            Resolve
          <% end %>
          <%= link_to close_admin_conversation_path(@conversation), data: { turbo_method: :patch, turbo_confirm: 'Close this conversation permanently? The customer will not be able to reopen it.' }, class: "inline-flex items-center px-3 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
            <%= icon('fa-solid', 'xmark', class: 'mr-2') %>
            Close
          <% end %>
        <% elsif @conversation.resolved? %>
          <%= link_to assign_admin_conversation_path(@conversation), data: { turbo_method: :post }, class: "inline-flex items-center px-3 py-2 border border-green-300 shadow-sm text-sm font-medium rounded-md text-green-700 bg-white hover:bg-green-50" do %>
            <%= icon('fa-solid', 'rotate-left', class: 'mr-2') %>
            Reopen
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Chat Container -->
    <div class="flex-1 bg-white rounded-lg shadow overflow-hidden flex flex-col"
         data-controller="chat"
         data-chat-conversation-id-value="<%= @conversation.id %>"
         data-chat-current-user-id-value="<%= current_admin_user.id %>"
         data-chat-current-user-type-value="AdminUser">

      <!-- Messages Area -->
      <div data-chat-target="messages" class="flex-1 overflow-y-auto p-4 space-y-2" id="messages">
        <% @messages.each do |message| %>
          <%= render partial: 'messages/message', locals: { message: message } %>
        <% end %>
      </div>

      <!-- Typing Indicator -->
      <div data-chat-target="typingIndicator" class="hidden px-4 py-2 text-sm text-gray-500 italic">
        Customer is typing...
      </div>

      <!-- Message Input -->
      <% unless @conversation.closed? %>
        <div class="border-t border-gray-200 p-4">
          <%= form_with model: @message, url: admin_conversation_messages_path(@conversation), local: false, class: "flex space-x-2", data: { chat_target: "form", action: "submit->chat#sendMessage" } do |f| %>
            <%= f.text_field :content, placeholder: "Type your message...", class: "flex-1 rounded-lg border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", autocomplete: "off", data: { chat_target: "input", action: "keyup->chat#handleTyping" } %>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
              <%= icon('fa-solid', 'paper-plane') %>
              <span class="ml-2 hidden sm:inline">Send</span>
            </button>
          <% end %>
        </div>
      <% else %>
        <div class="border-t border-gray-200 p-4 bg-gray-50 text-center text-gray-500">
          This conversation has been closed.
        </div>
      <% end %>
    </div>
  </div>

  <!-- Customer Info Sidebar -->
  <div class="lg:w-80 bg-white rounded-lg shadow p-4 flex-shrink-0">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Customer Information</h2>

    <div class="space-y-4">
      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Name</label>
        <p class="mt-1 text-sm text-gray-900"><%= @conversation.user.full_name %></p>
      </div>

      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Email</label>
        <p class="mt-1 text-sm text-gray-900">
          <%= mail_to @conversation.user.email, @conversation.user.email, class: 'text-blue-600 hover:text-blue-800' %>
        </p>
      </div>

      <% if @conversation.user.phone.present? %>
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Phone</label>
          <p class="mt-1 text-sm text-gray-900"><%= @conversation.user.phone %></p>
        </div>
      <% end %>

      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Member Since</label>
        <p class="mt-1 text-sm text-gray-900"><%= @conversation.user.created_at.strftime('%B %d, %Y') %></p>
      </div>

      <hr class="border-gray-200">

      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Conversation Started</label>
        <p class="mt-1 text-sm text-gray-900"><%= @conversation.created_at.strftime('%B %d, %Y at %H:%M') %></p>
      </div>

      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Total Messages</label>
        <p class="mt-1 text-sm text-gray-900"><%= @conversation.messages.count %></p>
      </div>

      <% if @conversation.admin_users.any? %>
        <div>
          <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned Admins</label>
          <ul class="mt-1 text-sm text-gray-900">
            <% @conversation.admin_users.each do |admin| %>
              <li class="flex items-center py-1">
                <span class="w-2 h-2 rounded-full mr-2 <%= admin.admin_presence&.status == 'online' ? 'bg-green-500' : 'bg-gray-400' %>"></span>
                <%= admin.email %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <hr class="border-gray-200">

      <div>
        <label class="block text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">Quick Actions</label>
        <div class="space-y-2">
          <% unless @conversation.conversation_participants.exists?(admin_user: current_admin_user) %>
            <%= link_to assign_admin_conversation_path(@conversation), data: { turbo_method: :post }, class: "block w-full text-center px-3 py-2 border border-blue-300 text-sm font-medium rounded-md text-blue-700 bg-white hover:bg-blue-50" do %>
              <%= icon('fa-solid', 'user-plus', class: 'mr-2') %>
              Assign to Me
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Template for flash messages -->
<template data-chat-target="messageTemplate">
  <div class="fixed top-20 right-4 z-50 max-w-sm">
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg">
      <span class="message-content"></span>
    </div>
  </div>
</template>
