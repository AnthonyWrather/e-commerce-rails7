<div class="mb-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Chat Dashboard</h1>
    <div class="flex items-center space-x-4">
      <!-- Availability Toggle -->
      <div class="flex items-center">
        <span class="mr-2 text-sm text-gray-600">Status:</span>
        <%= link_to admin_toggle_availability_conversations_path, method: :post, data: { turbo_method: :post }, class: "inline-flex items-center px-3 py-1 rounded-full text-sm font-medium #{@current_admin_presence&.status == 'online' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}" do %>
          <span class="w-2 h-2 rounded-full mr-2 <%= @current_admin_presence&.status == 'online' ? 'bg-green-500' : 'bg-gray-400' %>"></span>
          <%= @current_admin_presence&.status&.capitalize || 'Offline' %>
        <% end %>
      </div>
      <span class="text-sm text-gray-500">
        <%= @online_admins.count %> admin<%= @online_admins.count == 1 ? '' : 's' %> online
      </span>
    </div>
  </div>

  <!-- Filter Tabs -->
  <div class="border-b border-gray-200 mb-4">
    <nav class="-mb-px flex space-x-8">
      <%= link_to admin_conversations_path(status: nil), class: "pb-2 px-1 border-b-2 font-medium text-sm #{@filter.nil? || @filter == 'unresolved' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        All Unresolved
        <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-700">
          <%= Conversation.unresolved.count %>
        </span>
      <% end %>
      <%= link_to admin_conversations_path(status: 'open'), class: "pb-2 px-1 border-b-2 font-medium text-sm #{@filter == 'open' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        Open
        <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-blue-100 text-blue-700">
          <%= Conversation.open.count %>
        </span>
      <% end %>
      <%= link_to admin_conversations_path(status: 'active'), class: "pb-2 px-1 border-b-2 font-medium text-sm #{@filter == 'active' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        Active
        <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-green-100 text-green-700">
          <%= Conversation.active.count %>
        </span>
      <% end %>
      <%= link_to admin_conversations_path(status: 'resolved'), class: "pb-2 px-1 border-b-2 font-medium text-sm #{@filter == 'resolved' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        Resolved
        <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-gray-100 text-gray-700">
          <%= Conversation.resolved.count %>
        </span>
      <% end %>
      <%= link_to admin_conversations_path(status: 'closed'), class: "pb-2 px-1 border-b-2 font-medium text-sm #{@filter == 'closed' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        Closed
        <span class="ml-1 px-2 py-0.5 text-xs rounded-full bg-red-100 text-red-700">
          <%= Conversation.closed.count %>
        </span>
      <% end %>
    </nav>
  </div>

  <!-- My Conversations Section -->
  <% if @assigned_conversations.any? %>
    <div class="mb-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-3">My Conversations</h2>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Message</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unread</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @assigned_conversations.each do |conversation| %>
              <% participant = conversation.participant_for(current_admin_user) %>
              <% unread = participant&.unread_count || 0 %>
              <tr class="<%= unread > 0 ? 'bg-blue-50' : '' %>">
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= conversation.user.full_name %></div>
                  <div class="text-sm text-gray-500"><%= conversation.user.email %></div>
                </td>
                <td class="px-4 py-4">
                  <div class="text-sm text-gray-900"><%= truncate(conversation.subject.presence || "Chat ##{conversation.id}", length: 40) %></div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_badge_class(conversation.status) %>">
                    <%= conversation.status.humanize %>
                  </span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if conversation.latest_message %>
                    <%= time_ago_in_words(conversation.latest_message.created_at) %> ago
                  <% else %>
                    No messages
                  <% end %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <% if unread > 0 %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <%= unread %> new
                    </span>
                  <% else %>
                    <span class="text-sm text-gray-400">â€”</span>
                  <% end %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to 'View', admin_conversation_path(conversation), class: 'text-blue-600 hover:text-blue-900' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- All Conversations Section -->
  <div>
    <h2 class="text-lg font-semibold text-gray-800 mb-3">
      <%= @filter.present? ? "#{@filter.humanize} Conversations" : 'All Unresolved Conversations' %>
    </h2>
    <% if @conversations.any? %>
      <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assigned To</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last Message</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @conversations.each do |conversation| %>
              <tr>
                <td class="px-4 py-4 whitespace-nowrap">
                  <div class="text-sm font-medium text-gray-900"><%= conversation.user.full_name %></div>
                  <div class="text-sm text-gray-500"><%= conversation.user.email %></div>
                </td>
                <td class="px-4 py-4">
                  <div class="text-sm text-gray-900"><%= truncate(conversation.subject.presence || "Chat ##{conversation.id}", length: 40) %></div>
                  <% if (preview = conversation.latest_message&.content) %>
                    <div class="text-xs text-gray-500 mt-1"><%= truncate(preview, length: 50) %></div>
                  <% end %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= status_badge_class(conversation.status) %>">
                    <%= conversation.status.humanize %>
                  </span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if conversation.admin_users.any? %>
                    <%= conversation.admin_users.map(&:email).join(', ') %>
                  <% else %>
                    <span class="text-gray-400">Unassigned</span>
                  <% end %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if conversation.latest_message %>
                    <%= time_ago_in_words(conversation.latest_message.created_at) %> ago
                  <% else %>
                    No messages
                  <% end %>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to 'View', admin_conversation_path(conversation), class: 'text-blue-600 hover:text-blue-900' %>
                  <% unless conversation.conversation_participants.exists?(admin_user: current_admin_user) %>
                    <%= link_to 'Assign', assign_admin_conversation_path(conversation), data: { turbo_method: :post }, class: 'text-green-600 hover:text-green-900' %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <div class="text-gray-400 mb-2">
          <%= icon('fa-solid', 'comments', class: 'text-4xl') %>
        </div>
        <p class="text-gray-500">No conversations found</p>
      </div>
    <% end %>
  </div>
</div>
