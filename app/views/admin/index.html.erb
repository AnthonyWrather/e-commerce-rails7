<div class="flex flex-wrap items-center justify-between w-full max-w-4xl mt-8">
  <%# The Monthly Revenue Chart %>
  <div class="w-full my-8">
    <h1 class="mb-4 text-2xl font-medium text-gray-800">Monthly Revenue</h1>
    <div class="w-full h-1/2" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_month.to_json %>" data-dashboard-elementId-value="revenueChartMonthly">
      <canvas id="revenueChartMonthly"></canvas>
    </div>
  </div>

  <%# The Monthly Stats %>
  <h2 class="text-2xl font-medium text-gray-800">Monthly Stats</h2>
  <div class="flex flex-col justify-between w-full gap-2 my-8 md:flex-row">
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Gross Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? @monthly_stats[:revenue] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Net Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? (@monthly_stats[:revenue]*0.8) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Shipping?</div>
        <p class="text-base text-white">
          <%= formatted_price(0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">VAT</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? (@monthly_stats[:revenue]*0.2) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Num Sales</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:sales] ? (@monthly_stats[:sales]).to_s : "0" %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Total Items</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:items] ? (@monthly_stats[:items]).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Sale</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:avg_sale] ? @monthly_stats[:avg_sale] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Items/Sale</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:per_sale].to_i %>
        </p>
      </div>
    </div>
  </div>

  <%# Recent Unfulfilled Orders %>
  <div class="flex flex-col w-full">
    <h2 class="mb-4 text-2xl font-medium text-gray-800">Recent Unfulfilled Orders</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-gray-100" style="border-collapse: separate; border-spacing: 0;">
      <thead>
        <tr class="text-gray-800">
          <th class="px-6 py-3 text-left bg-gray-100 border-b-2 border-gray-200">Order ID</th>
          <th class="px-6 py-3 text-left bg-gray-100 border-b-2 border-gray-200">Order Date</th>
          <th class="px-6 py-3 text-left bg-gray-100 border-b-2 border-gray-200">Name</th>
          <th class="px-6 py-3 text-left bg-gray-100 border-b-2 border-gray-200">Customer Email</th>
          <th class="px-6 py-3 text-left bg-gray-100 border-b-2 border-gray-200">Amount</th>
        </tr>
      </thead>
      <tbody class="text-gray-700">
        <% @orders.each do |order| %>
          <tr>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= link_to order.id, admin_order_path(order), class: "underline" %>
            </td>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= order.created_at.strftime("%d %B %Y %H:%M") %>
            </td>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= order.name %>
            </td>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= order.customer_email %>
            </td>
            <td class="px-6 py-4 border-b border-gray-200">
              <%= formatted_price(order.total) %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
    </div>
  </div>

</div>
