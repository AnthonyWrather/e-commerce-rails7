<div class="flex flex-wrap items-center justify-between w-full max-w-4xl mt-8">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
  <% end %>

  <%# The Monthly Revenue Chart %>
  <div class="w-full my-8">
    <h1 class="mb-4 text-2xl font-medium text-gray-800">Current Month Revenue</h1>
    <div class="w-full h-1/2" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_month.to_json %>" data-dashboard-elementId-value="revenueChartMonthly">
      <canvas id="revenueChartMonthly"></canvas>
    </div>
  </div>

  <%# The Monthly Stats %>
  <h2 class="text-2xl font-medium text-gray-800">Current Month Stats</h2>
  <div class="flex flex-col justify-between w-full gap-2 my-8 md:flex-row">
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Gross Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? @monthly_stats[:revenue] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Net Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? (@monthly_stats[:revenue]/1.2) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Shipping?</div>
        <p class="text-base text-white">
          <%= formatted_price(0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">VAT</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:revenue] ? (@monthly_stats[:revenue]-(@monthly_stats[:revenue]/1.2)) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Num Sales</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:sales] ? (@monthly_stats[:sales]).to_s : "0" %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Total Items</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:items] ? (@monthly_stats[:items]).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Sale</div>
        <p class="text-base text-white">
          <%= formatted_price(@monthly_stats[:avg_sale] ? @monthly_stats[:avg_sale] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Items/Sale</div>
        <p class="text-base text-white">
          <%= @monthly_stats[:per_sale].to_i %>
        </p>
      </div>
    </div>
  </div>

  <%# Previous Month Revenue Chart %>
  <div class="w-full my-8">
    <h1 class="mb-4 text-2xl font-medium text-gray-800">Previous Month Revenue</h1>
    <div class="w-full h-1/2" data-controller="dashboard" data-dashboard-revenue-value="<%= @revenue_by_prev_month.to_json %>" data-dashboard-elementId-value="revenueChartPrevMonth">
      <canvas id="revenueChartPrevMonth"></canvas>
    </div>
  </div>

  <%# Previous Month Stats %>
  <h2 class="text-2xl font-medium text-gray-800">Previous Month Stats</h2>
  <div class="flex flex-col justify-between w-full gap-2 my-8 md:flex-row">
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
