        <div class="mb-2 text-xl font-bold text-white">Gross Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@prev_month_stats[:revenue] ? @prev_month_stats[:revenue] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Net Revenue</div>
        <p class="text-base text-white">
          <%= formatted_price(@prev_month_stats[:revenue] ? (@prev_month_stats[:revenue]/1.2) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Shipping?</div>
        <p class="text-base text-white">
          <%= formatted_price(0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">VAT</div>
        <p class="text-base text-white">
          <%= formatted_price(@prev_month_stats[:revenue] ? (@prev_month_stats[:revenue]-(@prev_month_stats[:revenue]/1.2)) : 0) %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Num Sales</div>
        <p class="text-base text-white">
          <%= @prev_month_stats[:sales] ? (@prev_month_stats[:sales]).to_s : "0" %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Total Items</div>
        <p class="text-base text-white">
          <%= @prev_month_stats[:items] ? (@prev_month_stats[:items]).to_s : "0" %>
        </p>
      </div>
    </div>
    <div class="max-w-sm overflow-hidden rounded shadow-xl bg-gradient-to-r from-gray-400 to-gray-300">
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Sale</div>
        <p class="text-base text-white">
          <%= formatted_price(@prev_month_stats[:avg_sale] ? @prev_month_stats[:avg_sale] : 0) %>
        </p>
      </div>
      <div class="px-2 py-4">
        <div class="mb-2 text-xl font-bold text-white">Average Items/Sale</div>
        <p class="text-base text-white">
          <%= @prev_month_stats[:per_sale].to_i %>
        </p>
      </div>
    </div>
  </div>
</div>
