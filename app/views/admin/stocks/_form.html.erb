<%= form_with(model: [:admin, @product, admin_stock], class: "contents") do |form| %>
  <% if admin_stock.errors.any? %>
    <div id="error_explanation" class="px-3 py-2 mt-3 font-medium text-red-500 rounded-lg bg-red-50">
      <h2><%= pluralize(admin_stock.errors.count, "error") %> prohibited this admin_stock from being saved:</h2>

      <ul>
        <% admin_stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :size %>
    <%= form.text_field :size, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :price %><p class="text-xs text-gray-500">in pence</p>
    <%= form.number_field :price, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2" %>
  </div>

  <div class="my-5">
    <%= form.label :weight %><p class="text-xs text-gray-500">in grams</p>
    <%= form.number_field :weight, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-50pc" %>
  </div>

  <div class="my-5">
    <%= form.label :length %><p class="text-xs text-gray-500">in cm</p>
    <%= form.number_field :length, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-50pc" %>
  </div>

  <div class="my-5">
    <%= form.label :height %><p class="text-xs text-gray-500">in cm</p>
    <%= form.number_field :height, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-50pc" %>
  </div>

  <div class="my-5">
    <%= form.label :width %><p class="text-xs text-gray-500">in cm</p>
    <%= form.number_field :width, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-50pc" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
