<div class="w-full">

  <div class="flex items-center justify-between">
    <h1 class="text-4xl font-bold">Products</h1>
    <%= link_to "New product", new_admin_product_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="flex flex-col items-start justify-between w-full mt-4 md:flex-row md:items-center">
    <%= form_with url: admin_products_path, method: :get, class: "flex" do |form| %>
      <%= form.text_field :query, placeholder: "Search", class: "rounded border-gray-500 text-gray-800" %>
      <%= form.submit "Submit", class: "cursor-pointer bg-gray-500 ml-2 hover:bg-gray-600 text-white py-2 px-4 rounded" %>
    <% end %>
    <%= form_with url: admin_products_path, method: :get, class: 'flex' do |form| %>
      <%= form.submit "Clear", class: "cursor-pointer bg-gray-500 ml-0 md:ml-2 mt-2 md:mt-0 hover:bg-gray-600 text-white py-2 px-4 rounded" %>
    <% end %>
  </div>

  <div class="flex flex-col w-full">
    <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
      <div class="inline-block min-w-full py-2">
        <div class="overflow-x-auto">
          <table class="min-w-full overflow-x-scroll">
            <thead class="bg-white border-b">
              <tr>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Name
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Description
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Category
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Size
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Price
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Stock Level
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-medium text-left text-gray-800">
                  Active
                </th>
              </tr>
            </thead>
            <tbody>
              <% @admin_products.each do |p| %>
                <tr class="border-b bg-gray-50">
                  <td class="px-6 py-4 font-medium text-gray-800 underline whitepsace-nowrap tex-sm">
                    <%= p.images.any? ? image_tag(p.images.first.variant(:thumb)) : placeholder_thumb %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 underline tex-sm">
                    <%= link_to p.name, edit_admin_product_path(p) %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= p.description %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <%= p.category.name %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <% p.stocks.each do |s| %>
                      <div class="text-nowrap"><%= s.size %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <% if p.price %>
                      <%= formatted_price(p.price) %>
                    <% end %>
                    <% p.stocks.each do |s| %>
                      <% if s.price %>
                        <p><%= formatted_price(s.price) %></p>
                      <% else %>
                        <p>Â£0.00</p>
                      <% end %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <% if p.stock_level %>
                      <%= p.stock_level %>
                    <% end %>
                    <% p.stocks.each do |s| %>
                      <% if s.stock_level %>
                        <p><%= s.stock_level %></p>
                      <% else %>
                        <p>0</p>
                      <% end %>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 font-medium text-gray-800 whitepsace-nowrap tex-sm">
                    <% if p.active %>
                      Active
                    <% else %>
                      Hidden
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
        </div>
      </div>
    </div>
  </div>

</div>
