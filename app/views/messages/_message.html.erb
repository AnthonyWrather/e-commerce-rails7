<div id="<%= dom_id(message) %>" class="flex <%= message.sender_type_class == 'admin' ? 'justify-start' : 'justify-end' %> mb-3">
  <div class="max-w-xs lg:max-w-md px-4 py-2 rounded-lg shadow <%= message.sender_type_class == 'admin' ? 'bg-gray-100 text-gray-800' : 'bg-blue-600 text-white' %>">
    <p class="text-xs font-medium mb-1 <%= message.sender_type_class == 'admin' ? 'text-gray-600' : 'text-blue-100' %>">
      <%= message.sender_name %>
    </p>
    <p class="text-sm whitespace-pre-wrap break-words"><%= message.content %></p>
    <p class="text-xs mt-1 <%= message.sender_type_class == 'admin' ? 'text-gray-500' : 'text-blue-200' %>">
      <%= message.created_at.strftime('%H:%M') %>
    </p>
  </div>
</div>
